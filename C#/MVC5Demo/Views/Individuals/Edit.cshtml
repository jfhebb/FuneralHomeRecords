@model MVC5Demo.Models.Individual

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <fieldset class="form-horizontal">
        <legend>Edit the record information</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="control-group">
            @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
			<div class="controls">
				@Html.EditorFor(model => model.LastName)
				@Html.ValidationMessageFor(model => model.LastName, null, new { @class = "help-inline" })
			</div>
		</div>

        <div class="control-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
			<div class="controls">
				@Html.EditorFor(model => model.FirstName)
				@Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "help-inline" })
			</div>
		</div>


        <div class="form-actions no-color">
            <input type="submit" value="Save" class="btn" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

