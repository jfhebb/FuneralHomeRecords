@model IEnumerable<MVC5Demo.Models.Individual>

@{
    ViewBag.Title = "VIEW RECORDS";
    ViewBag.IndivSelected = "selected";
}

    <!-- @Html.ActionLink("Create New", "Create") -->

<div id="most_recent" class="content">
    <div class="content_banner">
        <h4>Most Recent</h4>
    </div>

    @using (Html.BeginForm())
    {
            @Html.TextBox("SearchString", "Enter your search..", new { @class = "search_field form-control"})
            <input type="submit" class="search_field_button" value="Search" />
    }
    

    <table cellspacing="0" cellpadding="0">
        <tr>
            <th>
                Name
            </th>

            <th>
                Date Of Death
            </th>

            <th>
                Last Modified
            </th>
 
            <th>
                Actions
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.FullName, "Edit", new { id=item.Id })
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateOfDeath)
            </td>

            <td>
               @Html.DisplayFor(modelItem => item.DateAdded)
            </td>

            <td>
                <i class="fa  fa-edit"></i>               
                @Html.ActionLink("Edit", "Edit", new { id=item.Id })

                <!-- <i class="fa  fa-user"></i>
                @Html.ActionLink("Details", "Details", new { id=item.Id }) -->

                <i class="fa fa-times"></i>             
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })

            </td>
        </tr>
    }

    </table>
</div>