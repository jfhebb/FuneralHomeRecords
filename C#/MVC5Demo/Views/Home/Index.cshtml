@model IEnumerable<MVC5Demo.Models.Individual>

@{
    ViewBag.Title = "DASHBOARD";
    ViewBag.HomeSelected = "selected";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<div class="half dashboardBlock">
    <span><i class="fa fa-list-alt"></i></span>
    <h4>@Html.ActionLink("Add Record", "Create","Individuals")</h4>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do.</p>
</div>
<div class="half dashboardBlock">
    <span><i class="fa fa-print"></i></span>
    <h4>Print a Report</h4>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do.</p>
</div>
<div class="half dashboardBlock">
    <span><i class="fa fa-search"></i></span>
    <h4>Advanced Search</h4>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do.</p>
</div>
<div class="half dashboardBlock">
    <span><i class="fa fa-question-circle"></i></span>
    <h4>Help / Support</h4>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do.</p>
</div>

<div id="most_recent" class="content half">
    <div class="content_banner">
        <h4><i class="fa fa-list"></i>&nbsp;&nbsp;Most Recently Modified</h4>
    </div>
    <table cellspacing="0" cellpadding="0">
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Deceased</th>
        </tr>
        @foreach (var item in Model) 
        {
            <tr>
                <td> @Html.ActionLink(item.FullName, "Edit","Individuals", new { id=item.Id },null)</td>
                <td> @Html.DisplayFor(modelItem => item.DateAdded) </td>
                <td> @Html.DisplayFor(modelItem => item.DateOfDeath) </td>
            </tr>  
        }
    </table>
</div>

<div id="stats" class="content half">
    <div class="content_banner">
        <h4><i class="fa fa-file-text"></i>&nbsp;&nbsp;Database Statistics</h4>
    </div>
    <span>
        <h3>@ViewBag.totalRecords</h3>
        <p>Total Records on file</p>
    </span>
    <span>
        <h3>@ViewBag.recordsModifiedCurrentYear</h3>
        <p>Deceased in the Calendar Year</p>
    </span>
    <span>
        <h3>@ViewBag.projectedRecords</h3>
        <p>Projected Yearly Total</p>
    </span>
    
</div>